<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults public="true" />

        <service id="setono_sylius_trustpilot.behat.context.setup.order"
                 class="Tests\Setono\SyliusTrustpilotPlugin\Behat\Context\Setup\OrderContext">
            <argument type="service" id="sylius.behat.shared_storage" />
            <argument type="service" id="__symfony__.doctrine.orm.entity_manager" />
            <tag name="fob.context_service" />
        </service>

        <service id="setono_sylius_trustpilot.behat.context.setup.customer"
                 class="Tests\Setono\SyliusTrustpilotPlugin\Behat\Context\Setup\CustomerContext">
            <argument type="service" id="sylius.behat.shared_storage" />
            <argument type="service" id="__symfony__.doctrine.orm.entity_manager" />
            <tag name="fob.context_service" />
        </service>

    </services>
</container>
